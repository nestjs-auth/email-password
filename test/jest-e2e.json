{
	"moduleFileExtensions": ["js", "json", "ts"],
	"rootDir": "../src",
	"testEnvironment": "node",
	"testRegex": ".e2e-spec.ts$",
	"transform": {
		"^.+\\.(t|j)s$": "ts-jest"
	},
	"moduleNameMapper": {
		"@core/(.*)": "<rootDir>/core/$1",
		"@users/(.*)": "<rootDir>/users/$1",
		"@auth/(.*)": "<rootDir>/auth/$1",
		"@database/(.*)": "<rootDir>/database/$1",
		"@login/(.*)": "<rootDir>/login/$1",
		"@test/(.*)": "<rootDir>/../test/$1",
		"@src/(.*)": "<rootDir>/$1"
	}
}
