{
	"compilerOptions": {
		"module": "commonjs",
		"declaration": true,
		"removeComments": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"target": "es2017",
		"sourceMap": true,
		"outDir": "./dist",
		"baseUrl": "./src",
		"incremental": true,
		"paths": {
			"@core/*": ["core/*"],
			"@auth/*": ["auth/*"],
			"@database/*": ["database/*"],
			"@users/*": ["users/*"],
			"@login/*": ["login/*"],
			"@test/*": ["../test/*"],
			"@src/*": ["./*"]
		},
	},
	"exclude": ["node_modules", "dist"],
	"include": [
		"src/**/*"
	],
}
